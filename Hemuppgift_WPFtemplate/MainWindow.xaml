<Window x:Class="Hemuppgift_WPFtemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!-- START MAIN -->
    <Grid>
        
        <!-- Definiera 2 rader -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Definiera 2 kolumner -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Knappar för att öppna fönster med olika layoutkontroller -->
        <Button x:Name="btnGrid" Content="Grid" Click="btnGrid_Click"/>
        <Button x:Name="btnStackPanel" Content="StackPanel" Grid.Column="2" Click="btnStackPanel_Click"/>
        <Button x:Name="btnWrapPanel" Content="WrapPanel" Grid.Row="1" Click="btnWrapPanel_Click"/>
        <Button x:Name="btnDockPanel" Content="DockPanel" Grid.Row="1" Grid.Column="1" Click="btnDockPanel_Click"/>

    </Grid>
    <!-- SLUT MAIN -->
    
</Window>
