<Window x:Class="Hemuppgift_WPFtemplate.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">

    <!-- START -->
    <Grid>
        
        <!-- Meny med fem knappar -->
        <DockPanel>
            
            <!-- Inaktiva knappar vid kanterna -->
            <Button Content="Top" Height="30" Width="80" Margin="5" DockPanel.Dock="Top"/>
            <Button Content="Bottom" Height="30" Width="80" Margin="5" DockPanel.Dock="Bottom"/>
            <Button Content="Left" Height="30" Width="80" Margin="5" DockPanel.Dock="Left"/>
            <Button Content="Right" Height="30" Width="80" Margin="5" DockPanel.Dock="Right"/>
            
            <!-- Centerknapp som visar bild vid klick -->
            <Button Content="Center" Height="30" Width="80" Margin="5" Click="Button_Click"/>
            
        </DockPanel>

        <!-- Bild som visas vid klick -->
        <Image x:Name="imgTrophy" Source="TrophyImage.jpg" Width="300" Visibility="Collapsed"/>

    </Grid>
    <!-- SLUT -->
    
</Window>
